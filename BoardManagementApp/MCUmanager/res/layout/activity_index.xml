<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.FSL.mcuTracker.IndexActivity" >


    <TextView
        android:id="@+id/tv_i_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/SearchView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="37dp"
        android:text="UserID" />

    <SearchView
        android:id="@+id/SearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_scan"
        android:layout_below="@+id/tv_i_user"
        android:layout_marginTop="25dp"
        android:iconifiedByDefault="true"
        android:inputType="textFilter"
        android:imeOptions="actionSearch" />

    <Button
        android:id="@+id/btn_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SearchView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Scan QR" />
    <Button
        android:id="@+id/btn_list_units"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_scan"
        android:layout_below="@+id/btn_scan"
        android:layout_marginTop="30dp"
        android:text="List the boards" />

    <Button
        android:id="@+id/btn_add_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_scan"
        android:layout_below="@+id/btn_list_units"
        android:layout_marginTop="30dp"
        android:text="add a new board" />

        <Button
        android:id="@+id/btn_local_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_scan"
        android:layout_below="@+id/btn_add_unit"
        android:layout_marginTop="30dp"
        android:text="Local Data" />
    <TextView
        android:id="@+id/tv_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/SearchView"
        android:layout_marginLeft="41dp"
        android:layout_toRightOf="@+id/tv_i_user"
        android:text="need help \?"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
