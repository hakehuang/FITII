<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.FSL.mcuTracker.SignUpActivity" >
    <TextView
        android:id="@+id/tv_s_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="29dp"
    />
    <TextView
        android:id="@+id/tv_s_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_s_dialog"
        android:text="CoreID"
        android:textColor="#124578" />

    <EditText
        android:id="@+id/et_s_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_s_username"
        android:layout_alignLeft="@+id/et_s_password"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_s_username" >

        <requestFocus />
    </EditText>
    <TextView
        android:id="@+id/tv_s_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_s_username"
        android:layout_below="@+id/tv_s_username"
        android:layout_marginTop="20dp"
        android:text="Password"
        android:textColor="#124578" />

    <EditText
        android:id="@+id/et_s_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_s_password"
        android:layout_alignBottom="@+id/et_s_username"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="textPassword" />
    
    <TextView
        android:id="@+id/tv_s_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_s_password"
        android:layout_marginTop="20dp"
        android:text="Name"
        android:textColor="#124578" />

    <EditText
        android:id="@+id/et_s_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_s_name"
        android:layout_alignLeft="@+id/et_s_password"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_s_name" >

        <requestFocus />
    </EditText>


    <TextView
        android:id="@+id/tv_s_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_s_name"
        android:layout_below="@+id/tv_s_name"
        android:layout_marginTop="20dp"
        android:text="Dept Code"
        android:textColor="#124578" />

    <EditText
        android:id="@+id/et_s_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_s_department"
        android:layout_alignLeft="@+id/et_s_password"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_s_department" />

    <TextView
        android:id="@+id/tv_s_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_s_password"
        android:layout_below="@+id/tv_s_department"
        android:layout_marginTop="20dp"
        android:text="Location"
        android:textColor="#124578" />

    <EditText
        android:id="@+id/et_s_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_s_location"
        android:layout_alignLeft="@+id/et_s_password"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_s_location" />

    <Button
        android:id="@+id/btn_s_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_s_location"
        android:layout_below="@+id/tv_s_location"
        android:layout_marginTop="20dp"
        android:text="Sign up" />

</RelativeLayout>